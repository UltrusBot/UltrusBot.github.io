        <img src={image} class="w-32 h-32 drop-shadow-lg rounded-lg" alt="Mob Origins Icon">
        <div class="ml-2">
            <h1 class="font-bold my-2 text-lg text-pink-400 dark:text-pink-100"><a href={`/mod/${modrinth}`}>{name}</a></h1>
            <div class="inline">
                <slot></slot>
            </div>
        </div>
    </div>
    <div class="flex border-t-2 border-zinc-600 mt-2">
