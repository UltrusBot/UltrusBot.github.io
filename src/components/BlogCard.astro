---
interface Props {
    title: string;
    date: string;
    description: string;
    image?: string;
    tags: string[];
    url: string;
}

const { title, date, description, image, tags, url } = Astro.props;
const formatDate = new Date(date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })
---

<div class="bg-slate-300 dark:bg-zinc-700 mt-5 p-4 rounded-md mx-5 hover:shadow-md hover:shadow-neutral-500">
    <h2 class="font-bold mt-2 text-lg">{title}</h2>
    <p class="text-sm">Published on {formatDate}</p>
    <p>{description}</p>
    <a href={url} class="text-pink-700 dark:text-pink-400 underline">Read here...</a>
    <div class="mt-3">
        {tags.map((tag) => (
            <span class="text-xs bg-slate-400 dark:bg-zinc-500 rounded-md px-2 py-1 mr-1">{tag}</span>
        ))}
    </div>

</div>